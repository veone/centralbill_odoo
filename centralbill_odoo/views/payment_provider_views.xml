<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form" model="ir.ui.view">
        <field name="name">Centralbill Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group attrs="{'invisible': [('code', '!=', 'centralbill')]}">
                    <field name="centralbill_app_name" attrs="{'required':[ ('code', '=', 'centralbill'), ('state', '!=', 'disabled')]}"/>
                    <field name="centralbill_app_key" attrs="{'required':[ ('code', '=', 'centralbill'), ('state', '!=', 'disabled')]}"/>
                    <field name="centralbill_secret_key" string="Secret Key" attrs="{'required':[ ('code', '=', 'centralbill'), ('state', '!=', 'disabled')]}" password="True"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
